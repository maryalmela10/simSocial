{% extends 'base.html.twig' %}

{% block title %}Lista de Usuarios{% endblock %}

{% block contenido %}
    <h1>Lista de Usuarios</h1>
    <ul>
        {% for usuario in usuarios %}
            <li>
                <a href="{{ path('ver_perfil', { 'id': usuario.id }) }}">
                    {{ usuario.nombre }} {{ usuario.apellido }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
