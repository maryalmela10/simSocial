{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}SimSocial{% endblock %}</title>
          {% block stylesheets %}
            <link href="{{ asset('css/stylesheetCabecera.css') }}" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
	<header class="header-social">
    <div class="user-section">
        <div class="user-avatar">
            {{ app.user.nombre|first|upper }}
        </div>
        <span>¡Hola, {{ app.user.nombre }}!</span>
    </div>

    <nav class="nav-links">
        <a href="{{ path('inicio') }}" class="nav-link">
            🏠 Inicio
        </a>
        <a href="{{ path('ctrl_logout') }}" class="nav-link">
            🚪 Cerrar sesión
        </a>
    </nav>
</header>
    </body>
</html>