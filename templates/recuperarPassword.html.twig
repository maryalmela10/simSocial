{% extends 'base.html.twig' %}
{% block header %}
{% endblock %}
{% block title %}Solicitar recuperación de contraseña{% endblock %}
{% block stylesheets %}
<style>
    .container {
        max-width: 600px;
        margin: 40px auto;
        padding: 20px;
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    h1 {
        color: #1a3a63;
        text-align: center;
        margin-bottom: 30px;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
    }
    .mensaje {
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 5px;
    }

    .green{
        background-color: #d4edda;
        border: 1px solid #c3e6cb;
        color: #155724;
    }

    .red{
        background-color: #f8d7da; 
        color: #721c24; 
        border: 1px solid #f5c6cb; 
    }

    .form-group {
        margin-bottom: 20px;
    }
    label {
        display: block;
        margin-bottom: 5px;
        color: #333;
        font-weight: bold;
    }
    .form-control {
        width: 100%;
        padding: 10px;
        border: 2px solid #1a3a63;
        border-radius: 5px;
        font-size: 16px;
    }
    .btn-primary {
        display: inline-block;
        background-color: #99e7ff;
        color: #333;
        padding: 10px 20px;
        border: none;
        border-radius: 20px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }
    .btn-primary:hover {
        background-color: #dea1ff;
        color: white;
        transform: scale(1.05);
    }
</style>
{% endblock %}

{% block contenido %}
<div class="container">
    <h1>Solicitar recuperación de contraseña</h1>
    {% if mensaje is defined and mensaje %}
    <div class="mensaje {{ color }}">
            <p>{{ mensaje }}</p>
        </div>
    {% else %}
        <form action="{{ path('cambiar_contrasena') }}" method="post">
            <div class="form-group">
                <label for="email">Correo Electrónico:</label>
                <input type="email" id="email" name="email" required class="form-control">
            </div>
            <div style="text-align: center;">
                <button type="submit" class="btn-primary">Solicitar Recuperación</button>
            </div>
        </form>
    {% endif %}
</div>
{% endblock %}